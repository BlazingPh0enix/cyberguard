{
    "manifest_version": 3,
    "name": "CyberGuard",
    "version": "1.0",
    "description": "Process and replace all text from the current tab.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
